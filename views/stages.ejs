<h2>Stages</h2>
<div id="stagesContent">
  <!-- Stages content will be loaded dynamically here -->
</div>

<script>
  // Use AJAX to fetch stages data
  fetch('/api/stages')
    .then(response => response.json())
    .then(data => {
      const stagesContent = document.getElementById('stagesContent');
      stagesContent.innerHTML = '<ul>';
      data.forEach(stage => {
        stagesContent.innerHTML += `<li>${stage.name}</li>`;
      });
      stagesContent.innerHTML += '</ul>';
    })
    .catch(error => console.error('Error fetching stages data:', error));
</script>
