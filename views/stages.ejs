<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <title>Music Festival - Stages</title>

</head>
<body>
    <header style="display: flex; align-items: center; background-color: black;">
        <div>
          <img src="/images/logo.jpg" alt="Music Festival Logo" width="100" height="100">
        </div>
        <h1 style="margin-left: 10px; font-family: 'Georgia', serif; color:  red;"><i>Music Festival</i></h1>
        <nav style="margin-top: 15px; margin-left: auto;">
          <ul>
            <li><a href="/"><i>Home</i></a></li>
            <li><a href="/lineup"><i>Lineup</i></a></li>
            <li><a href="/stages"><i>Stages</i></a></li>
            <li><a href="/faq"><i>FAQ</i></a></li>
            <li><a href="/contact"><i>Contact</i></a></li>
            <li><a href="/activity"><i>Activity</i></a></li>
          </ul>
        </nav>
      </header>

  <h1 style="text-align: center; color: #f50c0c; font-family: 'Georgia', serif; margin-top: 20px; text-shadow: 2px 2px 4px #333;">
    Stages
  </h1>

  <ul id="lineupContent" class="main">
    <!-- Stages content will be loaded dynamically here -->
  </ul>

  <footer>
    <div class="social-icons">
        <a href="#" target="_blank" class="icon"><i class="fab fa-facebook-f"></i></a>
        <a href="#" target="_blank" class="icon"><i class="fab fa-twitter"></i></a>
        <a href="#" target="_blank" class="icon"><i class="fab fa-instagram"></i></a>
        <a href="#" target="_blank" class="icon"><i class="fab fa-whatsapp"></i></a>
        <a href="#" target="_blank" class="icon"><i class="fab fa-youtube"></i></a>
    </div>
    <p>&copy; 2023 Music Festival</p>
</footer>

  <script>
    // Use AJAX to fetch stages data
    fetch('/api/stages')
      .then(response => response.json())
      .then(data => {
        const stagesContent = document.getElementById('lineupContent');
        data.forEach(stage => {
          const stageBox = document.createElement('li');
          stageBox.className = 'artist-box';
          stageBox.textContent = stage.name;
          stagesContent.appendChild(stageBox);
        });
      })
      .catch(error => console.error('Error fetching stages data:', error));
  </script>
</body>
</html>
